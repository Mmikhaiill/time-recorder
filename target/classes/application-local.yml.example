# Example local configuration
# Copy to application-local.yml and adjust values

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/timerecorder
    username: postgres
    password: postgres

app:
  time-recorder:
    # Faster for local testing
    record-interval-ms: 1000
    reconnect-interval-ms: 5000
    max-buffer-size: 1000
    enabled: true

logging:
  level:
    com.example.timerecorder: DEBUG
    org.hibernate.SQL: DEBUG
